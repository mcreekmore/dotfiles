{{ if eq .chezmoi.os "linux" -}}
#!/bin/bash

sudo apt-get update
{{ range .packages.apt -}}
sudo apt-get install {{ . | quote }}
{{ end -}}

brew bundle --file=/dev/stdin <<EOF
{{ range .packages.homebrew.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.homebrew.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF
{{ end -}}