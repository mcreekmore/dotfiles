
# set default shell
set -g default-shell /bin/zsh

# set true color
set-option -sa terminal-overrides ",xterm*:Tc"

# mouse support
set -g mouse on

# set vi keys
setw -g mode-keys vi

# set tmux to the top
# set-option -g status-position top

# reload config
unbind r
bind r source-file ~/.config/tmux/tmux.conf

# change prefix
set -g prefix C-s

# open panes in current directory
bind '"' split-window -v -c "#{pane_current_path}"
bind % split-window -h -c "#{pane_current_path}"

# vi-like pane navigation
# bind-key h select-pane -L
# bind-key j select-pane -D
# bind-key k select-pane -U
# bind-key l select-pane -R

# start windows and panes at 1, not 0
set -g base-index 1
set -g pane-base-index 1
set-window-option -g pane-base-index 1
set-option -g renumber-windows on

# extend session name max length
set -g status-left-length 20

setenv -g TMUX_PLUGIN_MANAGER_PATH "$HOME/.config/tmux/plugins/"

set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'christoomey/vim-tmux-navigator'
set -g @plugin 'wfxr/tmux-fzf-url'
set -g @fzf-url-open "$BROWSER"

# set -g @plugin 'rose-pine/tmux'
# set -g @rose_pine_variant 'main' # Options are 'main', 'moon' or 'dawn'

set -g @plugin 'catppuccin/tmux#v1.0.1'
set -g @catppuccin_flavor 'mocha'
# set -g @plugin 'catppuccin/tmux'
# set -g @catppuccin_status_left_separator "â–ˆ"
# set -g @catppuccin_status_right_separator ">"

set -g status-style bg=default

run '~/.config/tmux/plugins/tpm/tpm'
